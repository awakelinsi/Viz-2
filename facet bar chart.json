{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
  "url":"https://raw.githubusercontent.com/awakelinsi/Viz-2/main/group%20bar%20chart.csv" 
  },
    "mark": "bar",
    "description": "A grouped bar chart using color to encode age bins. Each cell represents a state in the US.",
    "encoding": {
      "column": {"field": "year","type": "ordinal", "title":""},
      "y": {
        "aggregate": "sum",
        "field": "value",
        "type": "quantitative",
        "axis": {
          "title": "",
          "grid": false
        }
      },
      "x": {
        "field": "cause",
        "type": "nominal",
        "axis": null,
        "scale": {
          "domain": [
            "Opioid use disorders",
            "Cocaine use disorders",
            "Amphetamine use disorders",
            "Other drug use disorders"
          ],
          "rangeStep": 15
        }
      },
      "color": {
        "field": "cause",
        "scale": {
          "domain": [
            "Opioid use disorders",
            "Cocaine use disorders",
            "Amphetamine use disorders",
            "Other drug use disorders"
          ],
          "range": [
            "#66c2a5",
            "#fc8d62",
            "#8da0cb",
            "#e78ac3"
          ]
        },
        "legend": {
          "title": "Substance Types"
        }
      }
    }
  }