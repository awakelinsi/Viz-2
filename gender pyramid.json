{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A population pyramid for the US in 2000.",
  "data": { "url": "https://raw.githubusercontent.com/awakelinsi/Viz-2/main/gender%20pyramid.csv"},
  "transform": [
    {"calculate": "datum.sex == 2 ? 'Female' : 'Male'", "as": "gender"}
  ],
  "spacing": 0,
  "hconcat": [{
    "transform": [{
      "filter": {"field": "gender", "equal": "Female"}
    }],
    "title": "Female",
    "mark": {"type": "bar",  "tooltip": true},
    "encoding": {
      "y": {
        "field": "year", "axis": null, "sort": "descending"
      },
      "x": {
        "aggregate": "sum", "field": "value",
        "title": "number of deaths",
        "axis": {"format": "s"},
        "sort": "descending"
      },
      "color": {
        "field": "gender",
        "scale": {"range": ["#e78ac3", "#8da0cb"]},
        "legend": null
      }
    }
  }, {
    "width": 20,
    "view": {"stroke": null},
    "mark": {
      "type": "text",
      "align": "center"
    },
    "encoding": {
      "y": {"field": "year", "type": "ordinal", "axis": null, "sort": "descending"},
      "text": {"field": "year", "type": "ordinal"}
    }
  }, {
    "transform": [{
      "filter": {"field": "gender", "equal": "Male"}
    }],
    "title": "Male",
    "mark": {"type": "bar",  "tooltip": true},
    "encoding": {
      "y": {
        "field": "year", "title": null,
        "axis": null, "sort": "descending"
      },
      "x": {
        "aggregate": "sum", "field": "value",
        "title": "number of deaths",
        "axis": {"format": "s"}
      },
      "color": {
        "field": "gender",
        "legend": null
      }
    }
  }],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}